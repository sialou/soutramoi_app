{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./www",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "paths": {
      "~/*": [
        "src/app/*"
      ],
      "@/*": [
        "src/app/*"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
